<resources>

    <!-- Theme -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuCustom</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- No Action Bar theme -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!-- Login Theme -->
    <style name="SignInTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/auth_ui_background</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <!-- Styles -->
    <!-- Floating Action Button -->
    <style name="FloatingActionButtonCustom" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="borderWidth">0dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="tint">@color/white</item>
    </style>

    <!-- EditText -->
    <style name="EditTextCustom" parent = "Widget.AppCompat.EditText">
        <item name="android:textColor">@color/grey50</item>
        <item name="android:textColorHint">@color/grey50</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- CardView -->
    <style name="CardViewCustom" parent="CardView">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- TextInputLayout -->
    <style name="TextInputLayoutCustom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#FFFFFF</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <!-- MaterialTextView -->
    <style name="MaterialTextViewTitleCustom">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- MaterialButton -->
    <style name="ConfirmationMaterialButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/corner_radius_button</item>
    </style>

    <style name="SignInButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="MaterialButtonThemeFacebook" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorPrimary">@color/blue_facebook</item>
    </style>

    <style name="MaterialButtonThemeGoogle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorPrimary">@color/red_google</item>
    </style>

    <style name="MaterialButtonThemeTwitter" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorPrimary">@color/blue_twitter</item>
    </style>

    <!-- Overflow Menu toolbar -->
    <style name="OverflowMenuCustom" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">true</item>
        <item name="android:popupBackground">@drawable/overflow_menu_shape</item>
    </style>

    <!-- Dialog materialButton style -->
    <style name="MaterialButtonDialog" parent = "Widget.MaterialComponents.Button.TextButton">
        <!--<item name="android:textColor">@color/black</item>-->
        <!--<item name="android:textSize">16sp</item>-->
        <item name="borderWidth">0dp</item>
        <item name="iconTint">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MaterialButtonFilter" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
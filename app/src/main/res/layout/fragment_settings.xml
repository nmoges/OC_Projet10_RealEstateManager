<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.FragmentSettings">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_view_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/currency_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_monetization_on_24do_gray41"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/currency_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currency"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                app:layout_constraintLeft_toRightOf="@id/currency_icon"
                app:layout_constraintTop_toTopOf="@id/currency_icon"
                app:layout_constraintBottom_toBottomOf="@id/currency_icon" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/currency_text_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_text_symbol_currency"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/currency_icon"
                app:layout_constraintBottom_toBottomOf="@id/currency_icon"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_text_currency"
                android:layout_marginTop="10dp"
                android:paddingBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/currency_icon"
                app:layout_constraintLeft_toLeftOf="@id/currency_title"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey93"
    tools:context=".FragmentNewEstate">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Section "Name" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <!-- Title -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/str_new_estate_name_section_title"
                    style="@style/MaterialTextViewTitleCustom"/>
                <!-- Edit field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/new_estate_name_section_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    style="@style/TextInputLayoutCustom">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/new_estate_name_section_text_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Section "Location" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:text="@string/str_new_estate_location_section_title"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MaterialTextViewTitleCustom"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/new_estate_location_section_text_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    style="@style/TextInputLayoutCustom">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/new_estate_location_section_text_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Section "Description" -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:text="@string/str_new_estate_description_section_title"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MaterialTextViewTitleCustom"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/new_estate_desc_section_text_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        style="@style/TextInputLayoutCustom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/text_input_object_meeting"
                            android:gravity="top"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:inputType="textMultiLine"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            <!-- Section "Media" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:text="@string/str_new_estate_media_section_title"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MaterialTextViewTitleCustom"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scrollbars="none"
                    app:layout_constraintHorizontal_bias="1.0">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageButton
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_gravity="center"
                                android:background="@drawable/dotted_border_background"
                                android:src="@drawable/ic_baseline_insert_photo_24dp_grey62"
                                android:contentDescription="@string/str_button_add_media" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_button_add_media"
                                android:layout_marginBottom="15dp"
                                android:layout_gravity="bottom|center_horizontal"/>
                        </FrameLayout>

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

            <!-- Section "Surface" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:background="@color/white">

                <com.google.android.material.textview.MaterialTextView
                    android:text="@string/str_new_estate_surface_section_title"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MaterialTextViewTitleCustom"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/new_estate_surface_section_text_input_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/new_estate_surface_section_unit"
                        style="@style/TextInputLayoutCustom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/new_estate_surface_section_text_input_edit"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/new_estate_surface_section_unit"
                        android:text="@string/str_new_estate_surface_section_area_unit"
                        android:textSize="18sp"
                        android:textColor="@color/grey50"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/new_estate_surface_section_text_input_layout"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <!-- Section "Number of Rooms -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:background="@color/white">
                <com.google.android.material.textview.MaterialTextView
                    android:text="@string/str_new_estate_surface_number_of_rooms_title"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MaterialTextViewTitleCustom"/>

                <!-- Rooms -->
                <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/new_estate_nb_rooms_section_text_input_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="@string/str_new_estate_surface_rooms_hint"
                android:layout_gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/new_estate_surface_section_unit"
                style="@style/TextInputLayoutCustom">

                    <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/new_estate_nb_rooms_section_text_input_edit"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Bathrooms -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/new_estate_nb_bathrooms_section_text_input_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:hint="@string/str_new_estate_surface_bathrooms_hint"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/new_estate_surface_section_unit"
                    style="@style/TextInputLayoutCustom">

                    <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/new_estate_nb_bathrooms_section_text_input_edit"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Bedrooms -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/new_estate_nb_bedrooms_section_text_input_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:hint="@string/str_new_estate_surface_bedrooms_hint"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/new_estate_surface_section_unit"
                    style="@style/TextInputLayoutCustom">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/new_estate_nb_bedrooms_section_text_input_edit"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Section "Price" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:paddingTop="10dp"
                android:paddingBottom="40dp"
                android:orientation="vertical"
                android:background="@color/white">

                <com.google.android.material.textview.MaterialTextView
                    android:text="@string/str_new_estate_price_title"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MaterialTextViewTitleCustom"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/new_estate_price_section_text_input_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/new_estate_price_section_unit"
                        style="@style/TextInputLayoutCustom">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/new_estate_price_section_text_input_edit"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/new_estate_price_section_unit"
                        android:text="@string/str_new_estate_surface_section_price_unit"
                        android:textSize="18sp"
                        android:textColor="@color/grey50"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@id/new_estate_price_section_text_input_layout"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

            <!-- Confirmation button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:text="@string/str_button_confirmation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    style="@style/ConfirmationMaterialButton"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
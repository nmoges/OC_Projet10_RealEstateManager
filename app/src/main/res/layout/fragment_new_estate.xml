<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Section "Name" -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_estate_name_section_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_text_input_layout"
            android:layout_marginEnd="@dimen/margin_end_text_input_layout"
            style="@style/TextInputLayoutCustom">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/new_estate_name_section_text_input_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/hint_text_input"
                android:hint="@string/str_new_estate_name_hint_text_input"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Section "Location" -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_estate_location_section_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_text_input_layout"
            android:layout_marginTop="@dimen/margin_top_text_input_layout"
            android:layout_marginEnd="@dimen/margin_end_text_input_layout"
            style="@style/TextInputLayoutCustom">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/new_estate_location_section_text_input_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/hint_text_input"
                android:hint="@string/str_new_estate_location_hint_text_input"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Section "Description" -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_estate_desc_section_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_text_input_layout"
            android:layout_marginTop="@dimen/margin_top_text_input_layout"
            android:layout_marginEnd="@dimen/margin_end_text_input_layout"
            style="@style/TextInputLayoutCustom">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/new_estate_desc_section_text_input_edit"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="top"
                android:hint="@string/str_new_estate_description_hint_text_input"
                android:inputType="textMultiLine"
                android:textSize="@dimen/hint_text_input" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Section "Media" -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="@dimen/margin_top_text_input_layout"
            app:layout_constraintHorizontal_bias="1.0">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">

                    <ImageButton
                        android:layout_width="@dimen/icon_photo_size"
                        android:layout_height="@dimen/icon_photo_size"
                        android:layout_gravity="center"
                        android:background="@drawable/dotted_border_background"
                        android:src="@drawable/ic_baseline_insert_photo_24dp_grey62"
                        android:contentDescription="@string/str_button_add_media" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_button_add_media"
                        android:textSize="@dimen/text_photo_size"
                        android:layout_marginBottom="15dp"
                        android:layout_gravity="bottom|center_horizontal"/>

                </FrameLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Section "Surface" -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top_text_input_layout"
            android:rowCount="1"
            android:columnCount="2">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/new_estate_surface_section_text_input_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_start_text_input_layout"
                android:layout_marginEnd="@dimen/margin_end_text_input_layout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/new_estate_surface_section_unit"
                android:layout_row="0"
                android:layout_column="0"
                style="@style/TextInputLayoutCustom">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/new_estate_surface_section_text_input_edit"
                    android:layout_width="@dimen/text_input_edit_width_surface"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/hint_text_input"
                    android:hint="@string/str_new_estate_surface_hint_text_input"
                    android:inputType="number"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/new_estate_surface_section_unit"
                android:text="@string/str_new_estate_surface_section_area_unit"
                android:textSize="@dimen/unit_text"
                android:textColor="@color/grey50"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                app:layout_constraintLeft_toRightOf="@id/new_estate_surface_section_text_input_layout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </GridLayout>

        <!-- Section "Number of Rooms -->
        <!-- Rooms -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_estate_nb_rooms_section_text_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_text_input_layout"
            android:layout_marginTop="@dimen/margin_top_text_input_layout"
            android:layout_marginEnd="@dimen/margin_end_text_input_layout"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/new_estate_surface_section_unit"
            style="@style/TextInputLayoutCustom">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/new_estate_nb_rooms_section_text_input_edit"
                android:layout_width="@dimen/text_input_edit_width_rooms"
                android:layout_height="wrap_content"
                android:textSize="@dimen/hint_text_input"
                android:hint="@string/str_new_estate_rooms_hint_text_input"
                android:inputType="number"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Bathrooms -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_estate_nb_bathrooms_section_text_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_text_input_layout"
            android:layout_marginTop="@dimen/margin_top_text_input_layout"
            android:layout_marginEnd="@dimen/margin_end_text_input_layout"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/new_estate_surface_section_unit"
            style="@style/TextInputLayoutCustom">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/new_estate_nb_bathrooms_section_text_input_edit"
                android:layout_width="@dimen/text_input_edit_width_rooms"
                android:layout_height="wrap_content"
                android:textSize="@dimen/hint_text_input"
                android:hint="@string/str_new_estate_surface_bathrooms_hint"
                android:inputType="number"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Bedrooms -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_estate_nb_bedrooms_section_text_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_text_input_layout"
            android:layout_marginTop="@dimen/margin_top_text_input_layout"
            android:layout_marginEnd="@dimen/margin_end_text_input_layout"
            android:layout_marginBottom="@dimen/margin_bottom_text_input_layout"
            android:hint="@string/str_new_estate_surface_bedrooms_hint"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/new_estate_surface_section_unit"
            style="@style/TextInputLayoutCustom">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/new_estate_nb_bedrooms_section_text_input_edit"
                android:layout_width="@dimen/text_input_edit_width_rooms"
                android:layout_height="wrap_content"
                android:textSize="@dimen/hint_text_input"
                android:hint="@string/str_new_estate_bedrooms_hint_text_input"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirmation_button"
            android:text="@string/str_button_confirmation_creation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/ConfirmationMaterialButton"/>
    </LinearLayout>

</ScrollView>
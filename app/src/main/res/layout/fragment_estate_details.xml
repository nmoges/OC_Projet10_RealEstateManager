<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.fragments.FragmentEstateDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <!-- "Media" section -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title_section_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:layout_marginStart="@dimen/margin_start_description_material_text"
            android:text="@string/str_details_media_section_title"
            style="@style/MaterialTextViewTitleCustom"/>

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="@dimen/size_media"
                        android:layout_height="@dimen/size_media"
                        android:layout_margin="20dp"/>
                    <View
                        android:layout_width="@dimen/size_media"
                        android:layout_height="@dimen/height_banner"
                        android:layout_marginBottom="20dp"
                        android:background="#77666666"
                        android:layout_gravity="center_horizontal|bottom"/>
                    <TextView
                        android:text="Lounge 1"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="@dimen/size_media"
                        android:layout_height="@dimen/size_media"
                        android:layout_margin="20dp" />
                    <View
                        android:layout_width="@dimen/size_media"
                        android:layout_height="@dimen/height_banner"
                        android:layout_marginBottom="20dp"
                        android:background="#77666666"
                        android:layout_gravity="center_horizontal|bottom"/>
                    <TextView
                        android:text="Lounge 1"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="@dimen/size_media"
                        android:layout_height="@dimen/size_media"
                        android:layout_margin="20dp" />
                    <View
                        android:layout_width="@dimen/size_media"
                        android:layout_height="@dimen/height_banner"
                        android:layout_marginBottom="20dp"
                        android:background="#77666666"
                        android:layout_gravity="center_horizontal|bottom"/>
                    <TextView
                        android:text="Lounge 1"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="@dimen/size_media"
                        android:layout_height="@dimen/size_media"
                        android:layout_margin="20dp" />
                    <View
                        android:layout_width="@dimen/size_media"
                        android:layout_height="@dimen/height_banner"
                        android:layout_marginBottom="20dp"
                        android:background="#77666666"
                        android:layout_gravity="center_horizontal|bottom"/>
                    <TextView
                        android:text="Lounge 1"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="@dimen/size_media"
                        android:layout_height="@dimen/size_media"
                        android:layout_margin="20dp" />
                    <View
                        android:layout_width="@dimen/size_media"
                        android:layout_height="@dimen/height_banner"
                        android:layout_marginBottom="20dp"
                        android:background="#77666666"
                        android:layout_gravity="center_horizontal|bottom"/>
                    <TextView
                        android:text="Lounge 1"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="@dimen/size_media"
                        android:layout_height="@dimen/size_media"
                        android:layout_margin="20dp" />
                    <View
                        android:layout_width="@dimen/size_media"
                        android:layout_height="@dimen/height_banner"
                        android:layout_marginBottom="20dp"
                        android:background="#77666666"
                        android:layout_gravity="center_horizontal|bottom"/>
                    <TextView
                        android:text="Lounge 1"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="@dimen/size_media"
                        android:layout_height="@dimen/size_media"
                        android:layout_margin="20dp" />
                    <View
                        android:layout_width="@dimen/size_media"
                        android:layout_height="@dimen/height_banner"
                        android:layout_marginBottom="20dp"
                        android:background="#77666666"
                        android:layout_gravity="center_horizontal|bottom"/>
                    <TextView
                        android:text="Lounge 1"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="@dimen/size_media"
                        android:layout_height="@dimen/size_media"
                        android:layout_margin="20dp" />
                    <View
                        android:layout_width="@dimen/size_media"
                        android:layout_height="@dimen/height_banner"
                        android:layout_marginBottom="20dp"
                        android:background="#77666666"
                        android:layout_gravity="center_horizontal|bottom"/>
                    <TextView
                        android:text="Lounge 1"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
            </LinearLayout>

        </HorizontalScrollView>

        <!-- "Description" section -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title_section_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginStart="@dimen/margin_start_description_material_text"
            android:text="@string/str_details_description_section_title"
            style="@style/MaterialTextViewTitleCustom"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_section_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_description_material_text"
            android:layout_marginEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/fake_description"
            android:textSize="@dimen/text_description_size" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <!-- Surface -->
            <GridLayout
                android:id="@+id/info_surface_grid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="@dimen/margin_start_description_material_grid"
                android:rowCount="1"
                android:columnCount="2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/info_number_of_bedrooms_grid">

                <ImageView
                    android:src="@drawable/ic_baseline_settings_overscan_24dp_grey41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:contentDescription="@string/str_content_desc_surface_icon"/>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="2"
                    android:columnCount="1"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="15dp">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_details_surface_sub_section_title"
                        android:textStyle="bold"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:textSize="@dimen/text_description_grid"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fake_surface_value"
                        android:layout_marginStart="10dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:textSize="@dimen/text_description_grid"/>
                </GridLayout>
            </GridLayout>

            <!-- Number of rooms -->
            <GridLayout
                android:id="@+id/info_number_of_rooms_grid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:rowCount="1"
                android:columnCount="2"
                app:layout_constraintLeft_toLeftOf="@id/info_number_of_bathrooms_grid"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/info_number_of_bathrooms_grid">

                <ImageView
                    android:src="@drawable/ic_baseline_home_24dp_grey41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:contentDescription="@string/str_content_desc_surface_icon"/>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="2"
                    android:columnCount="1"
                    android:layout_marginStart="15dp">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_details_number_of_rooms_sub_section_title"
                        android:textStyle="bold"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:textSize="@dimen/text_description_grid"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fake_number_of_rooms_value"
                        android:layout_marginStart="10dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:textSize="@dimen/text_description_grid"/>
                </GridLayout>
            </GridLayout>

            <!-- Number of bedrooms -->
            <GridLayout
                android:id="@+id/info_number_of_bedrooms_grid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:rowCount="1"
                android:columnCount="2"
                app:layout_constraintLeft_toLeftOf="@id/info_surface_grid"
                app:layout_constraintTop_toBottomOf="@id/info_surface_grid"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:src="@drawable/ic_baseline_hotel_24dp_grey41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:contentDescription="@string/str_content_desc_surface_icon"/>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="2"
                    android:columnCount="1"
                    android:layout_marginStart="15dp">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_details_number_of_bedrooms_sub_section_title"
                        android:textStyle="bold"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:textSize="@dimen/text_description_grid"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fake_number_of_bedrooms_value"
                        android:layout_marginStart="10dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:textSize="@dimen/text_description_grid"/>
                </GridLayout>
            </GridLayout>

            <!-- Number of bathrooms -->
            <GridLayout
                android:id="@+id/info_number_of_bathrooms_grid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:rowCount="1"
                android:columnCount="2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info_number_of_rooms_grid"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:src="@drawable/ic_baseline_hot_tub_24dp_grey41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:contentDescription="@string/str_content_desc_surface_icon"/>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="2"
                    android:columnCount="1"
                    android:layout_marginStart="15dp">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_details_number_of_bathrooms_sub_section_title"
                        android:textStyle="bold"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:textSize="@dimen/text_description_grid"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fake_number_of_bathrooms_value"
                        android:layout_marginStart="10dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:textSize="@dimen/text_description_grid"/>
                </GridLayout>
            </GridLayout>

             </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Address -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:src="@drawable/ic_baseline_location_on_24dp_grey41"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/address_location_grid"/>

            <GridLayout
                android:id="@+id/address_location_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:columnCount="1"
                android:rowCount="2"
                app:layout_constraintLeft_toRightOf="@id/location_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/map_view">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:text="@string/str_details_location_sub_section_title"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_description_grid"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginStart="10dp"
                    android:text="@string/fake_address_value"
                    android:textSize="@dimen/text_description_grid"/>
            </GridLayout>

            <!-- Map -->
            <View
                android:id="@+id/map_view"
                android:layout_width="@dimen/size_map"
                android:layout_height="@dimen/size_map"
                android:background="@color/grey41"
                app:layout_constraintLeft_toRightOf="@id/address_location_grid"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>